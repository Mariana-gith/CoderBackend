 <div class="container">
        <div class="row">
          <div class="col-12">
              <h1 class="center">Ingresa un Producto</h1>
              </br>
            <form action="" method="post">
                <div class="row">
                    <div class="col">
                      <input type="text" name="name" class="form-control" placeholder="Nombre del Producto" aria-label="First name">
                    </div>
                    <div class="col">
                      <input type="number" name="price" class="form-control" placeholder="Precio">
                    </div>
                    <div class="col">
                      <input type="text" name="picture" class="form-control" placeholder="Foto">
                    </div>
                </br>
                    <hr class="my-4">
                    <div class="col-12">
                        <button type="submit" class="btn btn-outline-primary">Cargar Productos</button>
                        <a class="btn btn-outline-success" href="/loginSuccess" role="button">Volver</a>
                    </div>
                  </div>
              </div>
            </form>
            <div>
              <h1>Lista de Productos</h1> 
              <table class="table table-success table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">NOMBRE</th>
                    <th scope="col">PRECIO</th>
                    <th scope="col">FOTO</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach(function(p){%>
                  <tr>
                    <th scope="row"><%=p.id%> </th>
                    <td><%=p.name%>
                      <%if(p.name === "") {%>
                        <p>No se encontro el producto</p>
                      <%}%></td>
                    <td> $<%=p.price%></td>
                    <td><img src=  ></td>
                    <td>
                      <a href="/api/products/<%=p.id%>"><button>ver</button></a> 
                      <form action=" /api/shoppingcartproducts" method="post">
                        <button
                          name="id"
                          value=<%=p.id%>
                          type="submit"
                          class="btn btn-info"
                          style="margin-left: 630px;"
                        >
                          COMPRAR
                        </button>
                      </form>
                      <%if(role === "admin") {%>
                        <form action=" /api/products/deleteById" method="POST">
                          <button
                            name="id"
                            value=<%=p.id%>
                            type="submit"
                            class="btn btn-danger"
                            style="margin-left: 630px;"
                          >
                            Borrar
                          </button>
                        </form>
                      <%}%>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <%if(role !== "admin") {%>
              <a class="btn btn-outline-success" href=" /api/shoppingcartproducts" role="button">Ir alcarrio</a>
            <%}%>
        </div>
    </div>
